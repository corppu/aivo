<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/side_note_fragment"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="200dp"
    android:layout_marginEnd="200dp"
    android:layout_gravity="end"
    tools:context="com.aivo.hyperion.aivo.views.SideNoteFragment">

    <ListView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        >



    </ListView>

    <com.ogaclejapan.arclayout.ArcLayout
        android:id="@+id/arc_layout"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="0dp"
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:arc_axisRadius="51dp"
        app:arc_freeAngle="true"
        app:arc_origin="center"
        app:arc_radius="75dp">

        <ImageButton android:id="@+id/imageButton"
            android:background="@drawable/ic_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:arc_angle="330"
            />
        <ImageButton android:id="@+id/videoButton"
            android:background="@drawable/ic_video"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:arc_angle="280"
            />
        <ImageButton android:id="@+id/fileButton"
            android:background="@drawable/ic_file"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:arc_angle="20"
            />


    </com.ogaclejapan.arclayout.ArcLayout>

</RelativeLayout>
